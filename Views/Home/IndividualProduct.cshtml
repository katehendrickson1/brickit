@{
}

@model Product


<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.name</h5>
            <input type="hidden" asp-for="product_ID"></input>
            <img src="@Model.img_link" class="card-img-top" alt="Product Image">
            <p class="card-text">Year: @Model.year</p>
            <p class="card-text">Number of Parts: @Model.num_parts</p>
            <p class="card-text">Price: @Model.price</p>
            <p class="card-text">Primary Color: @Model.primary_color</p>
            <p class="card-text">Secondary Color: @Model.secondary_color</p>
            <p class="card-text">Description: @Model.description</p>
            <p class="card-text">Category: @Model.category</p>
        </div>
    </div>
</div>
