@model SignUpViewModel

<head>
    <title>Create User Account</title>
</head>
<body>
    <h2>Create User Account</h2>
    <form method="post" asp-controller="Home" asp-action="/User/Create">
        <!-- Assuming "/User/Create" is the endpoint to handle form submission -->
        <div>
            <label asp-for="first_name">First Name:</label>
            <input asp-for="first_name" type="text" id="first_name" name="first_name" required>
        </div>
        <div>
            <label asp-for="last_name">Last Name:</label>
            <input asp-for="last_name" type="text" id="last_name" name="last_name" required>
        </div>
        <div>
            <label asp-for="birth_date">Birth Date:</label>
            <input asp-for="birth_date" type="date" id="birth_date" name="birth_date" required>
        </div>
        <div>
            <label asp-for="country_of_residence">Country of Residence:</label>
            <input asp-for="country_of-residence" type="text" id="country_of_residence" name="country_of_residence" required>
        </div>
        <div>
            <label asp-for="gender">Gender:</label>
            <select asp-for="gender" id="gender" name="gender" required>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
            </select>
        </div>
        <div>
            <label asp-for="age">Age:</label>
            <input asp-for="age" type="number" id="age" name="age" required>
        </div>
        <div>
            <label asp-for="username">Username:</label>
            <input asp-for="username" type="text" id="username" name="username" required>
        </div>
        <div>
            <label asp-for="password">Password:</label>
            <input asp-for="password" type="password" id="password" name="password" required>
        </div>
@*         <div>
            <label for="confirm_password">Confirm Password:</label>
            <input type="password" id="confirm_password" name="confirm_password" required>
        </div> *@
        <div>
            <input type="submit" value="Create Account">
        </div>
    </form>
</body>

